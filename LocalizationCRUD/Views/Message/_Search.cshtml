@model IEnumerable<LocalizationCRUD.DAL.RisorseLocalizzazioneMessage>

@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idModulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.labelFor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lingua)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.label)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idModulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.labelFor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lingua)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.label)
        </td>
        <td>
            @Html.ActionLink("Update", "Update", new
    {
        idModulo = item.idModulo,
        labelFor = item.labelFor,
        lingua = item.lingua,
        label = item.label
    }) |
            @Html.ActionLink("Delete", "Delete", new
    {
        idModulo = item.idModulo,
        labelFor = item.labelFor,
        lingua = item.lingua
    })


            <a onclick="ShowEditModal( '@item.idModulo', '@item.labelFor', '@item.lingua', '@item.label')"
               class="btn btn-primary">Edit</a>

            <a onclick="ShowDeleteModal( '@item.idModulo', '@item.labelFor', '@item.lingua', '@item.label')"
               class="btn btn-primary">Delete</a>
        </td>
    </tr>
}

</table>

<script type="text/javascript">
    function ShowEditModal(idModulo, labelFor, lingua, label) {
        $('#showModal .modal-body').load(Router.action('Label', '_PartialUpdate', { idModulo: idModulo, labelFor: labelFor, lingua: lingua, label: label }));
        $('#showModal').modal("show");
    }
    function ShowDeleteModal(idModulo, labelFor, lingua, label) {
        $('#showModal .modal-body').load(Router.action('Label', '_PartialDelete', { idModulo: idModulo, labelFor: labelFor, lingua: lingua, label: label }));
        $('#showModal').modal("show");
    }
</script>
