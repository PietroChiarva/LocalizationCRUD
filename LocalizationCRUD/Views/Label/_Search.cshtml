@model IEnumerable<LocalizationCRUD.DAL.RisorseLocalizzazioneLabel>

@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idModulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.labelFor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lingua)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.label)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idModulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.labelFor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lingua)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.label)
        </td>
        <td>
            @Html.ActionLink("Update", "Update", new {
           idModulo = item.idModulo,labelFor = item.labelFor,lingua = item.lingua, label = item.label }) |
            @Html.ActionLink("Delete", "Delete", new { idModulo = item.idModulo, labelFor = item.labelFor,
                                                        lingua = item.lingua})
        </td>
    </tr>
}

</table>
